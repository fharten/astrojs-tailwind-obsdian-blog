---
import BaseHead from '../components/BaseHead.astro';

const {
  title,
  titleAppend,
  description,
  content,
  author,
  category,
  categoryLink,
  slug,
  image,
  createdAt,
} = Astro.props;
---

<BaseHead slot="basehead" title={title} description={description} />
<div class="pt-28">
  <div class="w-full h-72 md:h-96 overflow-hidden">
    <img src={image.url} alt={image.alt} class="w-full h-full object-cover" />
  </div>
  <div class="flex flex-col px-5 pt-5 md:px-0 space-y-5">
    <div class="flex">
      <a href={`/categories/${categoryLink}`} class="flex-1">
        <p class="mytext-muted p-small"># {category}</p>
      </a>
      <p class="mytext-muted p-small">{new Date(createdAt).toLocaleDateString()}</p>
    </div>
    <div class="flex">
      <h1 class="mytext-muted h1">{title.toUpperCase()}</h1>
      {titleAppend && <h1 class="mytext-muted h1 px-2">{titleAppend.toUpperCase()}</h1>}
    </div>
    <div class="mytext-base p">
      <slot />
    </div>
  </div>
</div>
