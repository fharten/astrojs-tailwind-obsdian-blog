---
import '../styles/fonts.css';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <slot name="basehead" />
  </head>
  <body class="bg-base m-0 min-h-screen overflow-x-hidden flex flex-col font-body">
    <div class="flex-1">
      <slot name="body" />
    </div>
    <footer>
      <slot name="footer" />
    </footer>
    <script>
      import '../scripts/menu.ts';
      import '../scripts/pageup.ts';
      import '../scripts/search.ts';
    </script>
  </body>
</html>
