---
import { Menu, Search, X } from 'lucide-react';
import ThemeToggle from './ThemeToggle.astro';
import SearchBar from './SearchBar';
---

<div>
  <div class="w-full fixed top-0 z-50">
    <div class="md:max-w-2xl lg:max-w-4xl xl:max-w-5xl mx-auto">
      <div class="hidden md:grid grid-cols-10 justify-center items-center">
        <div class="col-span-1 flex justify-start">
          <ThemeToggle />
        </div>
        <div class="col-span-2 flex justify-start">
          <a href="/categories">
            <h1
              class="font-heading mytext-base p-small py-10 text-center hover:scale-105 transition-all"
            >
              CATEGORIES
            </h1>
          </a>
        </div>
        <div class="col-span-4">
          <a href="/">
            <h1 class="font-heading h1 mytext-base py-10 text-center">OFF THE GRID</h1>
          </a>
        </div>
        <div class="col-span-2 flex justify-end">
          <a href="/why">
            <h1
              class="font-heading mytext-base p-small py-10 text-center hover:scale-105 transition-all"
            >
              WHY
            </h1>
          </a>
        </div>
        <div class="col-span-1 flex justify-end">
          <button id="search-icon" class="cursor-pointer hover:scale-110 transition-all">
            <Search client:load className="w-5 h-5 mytext-base" />
          </button>
        </div>
      </div>
      <SearchBar client:load />
    </div>

    <div class="flex p-5 mb-5 md:hidden">
      <a href="/" class="flex-1">
        <h1 class="text-left mytext-base font-heading h2">OFF THE GRID</h1>
      </a>
      <div id="hamburger">
        <Menu id="hamburger-icon" className="mytext-muted" id="burger-button" />
        <X className="mytext-muted hidden" id="burger-close-button" />
      </div>
    </div>

    <script>
      import { loadSavedTheme } from '../scripts/theme.ts';
      loadSavedTheme();
    </script>
  </div>
</div>
