---
import { Menu, X } from '@lucide/astro';
---

<div class="w-full fixed top-0 z-50">
  <div>
    <div class="hidden md:flex justify-center items-center">
      <div class="w-1/3 flex justify-center">
        <h1 class="font-heading mytext-base p-small py-10 text-center">CATEGORIES</h1>
      </div>
      <div class="w-1/3">
        <h1 class="font-heading h1 mytext-base py-10 text-center">OFF THE GRID</h1>
      </div>
      <div class="w-1/3 flex justify-center">
        <h1 class="font-heading mytext-base p-small py-10 text-center">WHY</h1>
      </div>
    </div>
  </div>

  <div class="flex p-5 mb-5 md:hidden">
    <h1 class="text-left mytext-base font-heading h2 flex-1">OFF THE GRID</h1>
    <div id="hamburger">
      <Menu class="mytext-muted mr-10" id="burger-button" />
      <X class="mytext-muted mr-10 hidden" id="burger-close-button" />
    </div>
  </div>
</div>
