---
import { X } from '@lucide/astro';
import { Plus } from '@lucide/astro';
---

<div class="mx-5 mb-5 h-auto">
  <div class="h-10 w-full bg-bg-dark rounded-t-md flex items-center justify-center">
    <div class="pl-2 w-1/6">
      <Plus class="text-text-muted" size={18} />
    </div>

    <p
      class="text-p-xsmall text-text-muted mr-2 leading-p-xsmall tracking-p-xsmall text-center w-4/6"
    >
      OPENSOURCE@2025/07/27: ~
    </p>
    <div class="pr-2 w-1/6 flex justify-end">
      <X class="text-text-muted" size={18} />
    </div>
  </div>
  <div class="h-44 w-full overflow-hidden">
    <img src="/images/output.jpg" alt="post image" class="object-cover" />
  </div>
  <div class="h-44 bg-bg-light p-5 flex flex-col justify-between">
    <div>
      <div class="flex">
        <p class="text-p-small text-text-muted mr-2 leading-p-small tracking-p-small">~</p>
        <p class="text-h2 text-text leading-h2 tracking-h2">Switch to Linux</p>
      </div>
      <div class="flex">
        <p class="text-p-small text-text-muted mr-2 leading-p-small tracking-p-small">~</p>
        <p class="text-h2 text-text leading-h2 tracking-h2">EndeavorOS install & config guide</p>
      </div>
    </div>
    <div class="justify-end flex">
      <p class="text-p-xsmall text-text-muted mr-2 leading-p-xsmall tracking-p-xsmall">
        # OPENSOURCE
      </p>
    </div>
  </div>
</div>
